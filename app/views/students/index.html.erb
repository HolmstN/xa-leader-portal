<h1>All Students</h1>

<%= link_to 'New Student Connection', new_student_path %>

<table>
  <tr>
    <th>Name</th>
    <th>Group Type</th>
    <th>Email</th>
    <th>Phone</th>
  </tr>
  
  <% @students.each do |student| %>
    <tr>
      <td><%= student.name %></td>
      <td><%= student.group_type %></td>
      <td><%= student.email %></td>
      <td><%= student.phone %></td>
      <td><%= link_to 'Show', student_path(student) %></td>
      <td><%= link_to 'Edit', edit_student_path(student) %></td>
      <td><%= link_to 'Delete', student_path(student), method: :delete, data: { confirm: 'Are you sure you want to remove this student?' } %></td>
    </tr>
    <% end %>
</table>

